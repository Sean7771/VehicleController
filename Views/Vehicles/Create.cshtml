@model VehicleController.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageSpeed" class="control-label"></label>
                <input asp-for="AverageSpeed" class="form-control" />
                <span asp-validation-for="AverageSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DistanceDriven" class="control-label"></label>
                <input asp-for="DistanceDriven" class="form-control" />
                <span asp-validation-for="DistanceDriven" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceReversed" class="control-label"></label>
                <input asp-for="DistanceReversed" class="form-control" />
                <span asp-validation-for="DistanceReversed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
